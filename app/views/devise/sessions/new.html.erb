<h1 class="login text-center">UPACH</h1>

<div class="row justify-content-center text-center ">
  <div class="col-sm-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="card">
          <h4 class="mt-1">INICIE SESION</h4>
          <div class="card-body">
              <div class="mb-2">
                <%= f.email_field :email, autofocus: true, autocomplete: "email" , :class => 'form-control', :placeholder => 'Usuario' %>
              </div>
            
              <div class="mb-2">
                <%= f.password_field :password, autocomplete: "current-password", :class => 'form-control', :placeholder=> 'ContraseÃ±a' %>
              </div>
            
              <div class="actions">
                <%= f.submit "Ingresar", :class => 'btn btn-primary mt-3' %>
              </div>

          </div>
        </div>
        
      <% end %>
  </div>
</div>