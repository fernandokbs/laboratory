<h1 class="text-center mt-5">Tabuladores</h1>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tabulators.each do |tabulator| %>
        <tr>
          <td><%= tabulator.name %></td>
          <td><%= link_to 'Mostar', tabulator, :class => 'btn btn-primary' %></td>
          <td><%= link_to 'Editar', edit_tabulator_path(tabulator), :class => 'btn btn-secondary' %></td>
          <td><%= link_to 'Eliminar', tabulator, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<%= link_to 'New Tabulator', new_tabulator_path %>
